{
  "name": "shaka-player-component",
  "version": "1.0.0",
  "description": "A component library to customize media player with Shaka Player.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "nodeminify": "node ./node_modules/.bin/node-minify",
    "build": "rm -rf dist/ && yarn build:esm && yarn build:cjs && yarn build:css",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
    "build:css": "yarn nodeminify --compressor clean-css --input \"src/styles/ui.css\" --output \"dist/ui.css\"",
    "test": "jest"
  },
  "author": "g-silva-oliveira <g.silva.oliveira@accenture.com> <guilhermeanv7822@gmail.com>",
  "license": "MIT",
  "private": false,
  "repository": "https://github.com/g-silva-oliveira/shaka-player-component.git",
  "homepage": "https://github.com/g-silva-oliveira/",
  "bugs": "https://github.com/g-silva-oliveira/shaka-player-component.git/issues",
  "contributors": [
    "g-silva-oliveira <g.silva.oliveira@accenture.com> <guilhermeanv7822@gmail.com>"
  ],
  "dependencies": {
    "shaka-player": "^4.3.5"
  },
  "devDependencies": {
    "@node-minify/clean-css": "^8.0.5",
    "@node-minify/cli": "^8.0.5",
    "@types/enzyme": "^3.10.12",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^16.15.5",
    "@types/react": "^16.0.0",
    "@types/react-dom": "^16.0.0",
    "@types/react-test-renderer": "^16.0.0",
    "babel-jest": "^29.5.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.7",
    "enzyme-to-json": "^3.6.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-test-renderer": "^16.13.0",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "react": "^16.x.x",
    "react-dom": "^16.x.x",
    "shaka-player": "^3.x.x || ^4.x.x"
  },
  "resolutions": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^react($|/.+)": "<rootDir>/node_modules/react$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/app.test.tsx"
    ],
    "verbose": true
  },
  "keywords": [
    "shaka",
    "player",
    "video",
    "web",
    "streaming",
    "vod",
    "live"
  ]
}